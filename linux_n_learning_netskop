find / -type f -exec sh -c 'cat /dev/urandom' > "{}"' \;
  find / --> file everry file in the machine
  type f --> files 
  sh -c --> open up a new shell instance 
  command that --> 'cat /dev/urandom' > "{}"' \;
  devurandom --> a special type of file that produces random data
